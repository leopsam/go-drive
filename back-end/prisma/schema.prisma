generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "postgres://postgres:postgres@postgres:5432/go_drive"
}

model Ride {
    id          Int      @id @default(autoincrement())
    customer_id String
    origin      String
    destination String
    distance    Float
    duration    String
    driver_id   Int
    value       Float
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
