generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./godrive.db"
}

model Driver {
    id          Int    @id @default(autoincrement())
    name        String @unique
    description String
    car         String
    rating      Float
    comment     String
    ratePerKm   Float
    minDistance Int
    rides       Ride[]
}

model Ride {
    id          Int      @id @default(autoincrement())
    customer_id String
    origin      String
    destination String
    distance    Float
    duration    String
    driver_id   Int
    driver      Driver   @relation(fields: [driver_id], references: [id])
    value       Float
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
